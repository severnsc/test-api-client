<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Login</h1>
    <%= form_tag(login_path, method: :post) %>
    <%= email_field_tag '[user]email', '', {class: 'form-control'} %>
    <%= password_field_tag '[user]password', '', {class: 'form-control'} %>
    <%= submit_tag "Login", class: 'btn btn-primary' %>
  </div>
</div>