<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Sign Up</h1>
    <%= form_tag(users_path, method: :post) %>
    <%= email_field_tag '[user]email', nil, class: 'form-control' %>
    <%= password_field_tag '[user]password', nil, class: 'form-control' %>
    <%= password_field_tag '[user]password_confirmation', nil, class: 'form-control' %>
    <%= submit_tag 'Create account', class: 'btn btn-primary' %>
  </div>
</div>